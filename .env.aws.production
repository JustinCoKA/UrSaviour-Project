# AWS EC2 Production Environment Variables

# 데이터베이스 설정 (AWS RDS MySQL)
DATABASE_URL=mysql://admin:YOUR_RDS_PASSWORD@your-rds-endpoint.region.rds.amazonaws.com:3306/ursaviour

# FastAPI 설정
ENVIRONMENT=production
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production

# CORS 설정 (실제 도메인으로 변경)
CORS_ORIGINS=["http://yourdomain.com", "https://yourdomain.com", "http://www.yourdomain.com", "https://www.yourdomain.com"]

# API 설정
API_V1_STR=/api/v1
PROJECT_NAME=UrSaviour

# AWS 설정
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# S3 설정 (파일 업로드용)
S3_BUCKET_NAME=ursaviour-files
S3_REGION=ap-northeast-2

# Redis 설정 (캐싱용)
REDIS_URL=redis://redis:6379/0

# 알림 설정
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# 보안 설정
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 로깅 설정
LOG_LEVEL=INFO